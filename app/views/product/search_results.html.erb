<div id="allProductHeading">
	<nav>
		<ul>
			<li><%= link_to "Home", root_path %></li>
			<% @pages.each do |page| %>
				<li><%= link_to page.name, page_path(page) %></li>
			<% end %>
		</ul>
	</nav>
</div>
<div id="pageBody">
	<h2>Search Results for '<%= params[:search_keywords] %>'</h2>

	<% if @products.size.zero? %>
		<p>No Product Found.</p>
	<% else %>
	<p><%= pluralize(@products.size, 'Product') %> Found.
		<%= render partial: 'product',
				   collection: @products,
				   locals: {display_link_to_show: true},
				   as: 'product' %>
	<% end %>
</div>