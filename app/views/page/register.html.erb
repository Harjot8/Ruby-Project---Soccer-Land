<h1 id="headingLoginRegister">Register</h1>

<%= form_for(@customer) do |c| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="allFieldFormRegister">
  <div class="field">
    <%= c.label :username %>
    <%= c.text_field :username %>
  </div>
  <div class="field">
    <%= c.label :first %>
    <%= c.text_field :first %>
  </div>
  <div class="field">
    <%= c.label :last %>
    <%= c.text_field :last %>
  </div>
  <div class="field">
    <%= c.label :email %>
    <%= c.text_field :email %>
  </div>
  <div class="field">
    <%= c.label :bio %>
    <%= c.text_area :bio %>
  </div>
  <div class="actions">
    <%= form_tag root_path, method: :get do %>
    <%= submit_tag 'Register' %>
    <% end %>
  </div>
</div>
<% end %>
