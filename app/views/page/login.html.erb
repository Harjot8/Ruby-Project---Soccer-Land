<h1 id="headingLoginRegister">Log in</h1>

<%= form_for(@customer) do |c| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="allFieldFormLogin">
  <div class="field">
    <%= c.label :username %>
    <%= c.text_field :username %>
  </div>
  <div class="field">
    <%= c.label :password %>
    <%= c.text_field :password %>
  </div>
  <div class="actions">
    <%= c.submit %>
  </div>
</div>
<% end %>
